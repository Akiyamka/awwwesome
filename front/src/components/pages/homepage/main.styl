@import './../../../colorTheme'
@import 'svg'
#main-page
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  flex: 1
  height: 100%
  max-width: 1100px
  margin: 0 auto
  .icon
    width: 100%
    display: inline-block
    text-align: center
    svg
      height: 30vh
      display: inline-block
  .display-box
    flex: 1
    align-items: center
    display: flex
    flex-flow: row nowrap
    .centerizer
      width: 100%
      margin-bottom: 100px
  .hero
    position: absolute
    h1
      font: 62px/1.2em 'JustSquare', sans-serif
      color: secondColor
      text-align: left
      margin: .5em 0 0
    p
      color: secondColor
      font-size: 22px
      margin: 0
    svg
      height: 84px

  .illustration
    display: flex
    flex-flow: row nowrap
    flex: 1
    align-items: center
    width: 100%

// svg styles

  nav.skills
    color: secondColor
    display: flex
    flex-flow: row nowrap
    align-items: flex-end
    height: 92px

.showttl-enter-active
  transition-timing-function: ease-in
  transition-duration: .5s
.showttl-leave-active
  transition-property: all
  transition-duration: .20s
  position: relative
  transition-timing-function: ease-out

// Анимация выхода
.showttl-leave
  margin-top: 0
  opacity: 1

.showttl-leave-to
  opacity: 0

// Анимация входа
.showttl-enter
  opacity: 0

.showttl-enter-to
  opacity: 1

