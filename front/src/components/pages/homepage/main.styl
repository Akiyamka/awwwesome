  #hero
    overflow: hidden
    height: 100%
    box-sizing: border-box
    perspective: 600px
    transform-style: preserve-3d
    .wrapper
      height: 100%
      display: flex
      flex-flow: column nowrap
      justify-content: space-between
      box-sizing: border-box
    .icon
      width: 100%
      display: inline-block
      text-align: center
      svg
        height: 30vh
        display: inline-block
    article.main
      position: absolute
      height: 100%
      top: 0
      display: flex
      flex-flow: column nowrap
      justify-content: center
      padding-bottom: 10%
      box-sizing: border-box
      h1
        font: 62px/1.2em 'JustSquare', sans-serif
        color: white
        text-align: left
        margin: .5em 0 0
      p
        color: white
        font-size: 22px
        margin: 0
      svg
        height: 84px
  nav
    color: white
    overflow: hidden
    display: flex
    flex-flow: row nowrap
    align-items: flex-end


// svg styles
.logo-main
  fill: #ff4800
.logo-second
  fill: #fff

.illustration
  display: flex
  flex-flow: row nowrap
  padding-top: 8%

.cls-wide
.cls-line
.cls-line-secondary
.cls-line3
.cls-shortDash
.cls-longDash
  stroke: #ff4800
  fill: none


.cls-line
.cls-line3
.cls-line-secondary
  fill: none
  stroke-miterlimit: 10
  stroke-width: 2px
  stroke-dasharray: 2000
  stroke-dashoffset: 2000
  stroke-linejoin: round

.cls-line-secondary
  opacity: 0.2

.cls-rect
.cls-filled
  fill: #ff4800
  opacity: 0

.cls-wide
  stroke-width: 8px
  opacity: 0

.cls-shortDash
  stroke-dasharray: 2.01 2.01
  opacity: 0

.cls-longDash
  stroke-linecap: round
  stroke-dasharray: 12.23 12.23
  opacity: 0

.cls-glow
  fill: none
  stroke: #ff6d00
  stroke-width: 4px
  box-shadow: 0px 0px 8px 0px rgba( 255, 111, 0, 1 )
  -webkit-filter: drop-shadow( 0px 0px 8px 0px #fff )
  filter: drop-shadow( 0px 0px 8px 0px #fff )
  opacity: 0

.cls-glow-img
  opacity: 0

.showttl-enter-active
  transition-timing-function: ease-in
  transition-duration: .5s
.showttl-leave-active
  transition-property: all
  transition-duration: .20s
  position: relative
  transition-timing-function: ease-out
// Анимация выхода
.showttl-leave
  margin-top: 0
  opacity: 1

.showttl-leave-to
  margin-top: -50px
  opacity: 0

// Анимация входа
.showttl-enter
  opacity: 0

.showttl-enter-to
  opacity: 1

