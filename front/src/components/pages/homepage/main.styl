@import './../../../colorTheme'
@import 'svg'
#hero
  overflow: hidden
  height: 100%
  box-sizing: border-box
  .wrapper
    height: 100%
    display: flex
    flex-flow: column nowrap
    justify-content: space-between
    box-sizing: border-box
  .icon
    width: 100%
    display: inline-block
    text-align: center
    svg
      height: 30vh
      display: inline-block
  article.main
    position: absolute
    height: 100%
    top: 0
    display: flex
    flex-flow: column nowrap
    justify-content: center
    padding-bottom: 10%
    box-sizing: border-box
    h1
      font: 62px/1.2em 'JustSquare', sans-serif
      color: secondColor
      text-align: left
      margin: .5em 0 0
    p
      color: secondColor
      font-size: 22px
      margin: 0
    svg
      height: 84px
nav
  color: secondColor
  overflow: hidden
  display: flex
  flex-flow: row nowrap
  align-items: flex-end
.skills
  position: absolute
  bottom: 0


// svg styles
.illustration
  display: flex
  flex-flow: row nowrap
  flex: 1
  align-items: center
  padding-bottom: 20%

.showttl-enter-active
  transition-timing-function: ease-in
  transition-duration: .5s
.showttl-leave-active
  transition-property: all
  transition-duration: .20s
  position: relative
  transition-timing-function: ease-out

// Анимация выхода
.showttl-leave
  margin-top: 0
  opacity: 1

.showttl-leave-to
  margin-top: -50px
  opacity: 0

// Анимация входа
.showttl-enter
  opacity: 0

.showttl-enter-to
  opacity: 1

