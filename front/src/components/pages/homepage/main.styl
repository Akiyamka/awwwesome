@import './../../../colorTheme'
@import 'svg'
#main-page
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  flex: 1
  height: 100%
  max-width: 1100px
  margin: 0 auto
  .icon
    width: 100%
    display: inline-block
    text-align: center
    svg
      height: 30vh
      display: inline-block
  .display-box
    flex: 1
    align-items: center
    display: flex
    flex-flow: row nowrap
    @media (max-width: 580px)
      margin: 42px 0
    .centerizer
      width: 100%
      margin-bottom: 100px
      @media (max-width: 1024px)
        margin-bottom: 0
  .hero
    position: absolute
    @media (max-width: 1024px)
      position: relative
    h1
      font: 42px/1.2em 'JustSquare', sans-serif
      color: secondColor
      text-align: left
      margin: 0
      @media (max-width: 1024px)
        font-size: 42px
    p
      color: secondColor
      font-size: 22px
      margin: 0
      @media (max-width: 1024px)
        font-size: 16px
    svg
      height: 84px
      @media (max-width: 1024px)
        height: 64px
      @media (max-width: 580px)
        height: 52px
  .illustration
    display: flex
    flex-flow: row nowrap
    flex: 1
    align-items: center
    width: 100%
    @media (max-width: 1024px)
      display: none
// svg styles

  nav.skills
    color: secondColor
    display: flex
    flex-flow: row nowrap
    align-items: flex-end
    height: 92px
    @media (max-width: 1024px)
      header
        font-size: 20px
      article
        font-size: 14px
    @media (max-width: 580px)
      flex-flow: column nowrap
      height: auto
.showttl-enter-active
  transition-timing-function: ease-in
  transition-duration: .5s
.showttl-leave-active
  transition-property: all
  transition-duration: .20s
  position: relative
  transition-timing-function: ease-out

// Анимация выхода
.showttl-leave
  margin-top: 0
  opacity: 1

.showttl-leave-to
  opacity: 0
  @media (max-width: 580px)
    opacity: 1
// Анимация входа
.showttl-enter
  opacity: 0
  @media (max-width: 580px)
    opacity: 1
.showttl-enter-to
  opacity: 1

