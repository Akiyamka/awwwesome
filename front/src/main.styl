.fade-enter-active
.fade-leave-active
  transition-property: all
  transition-duration: .35s
  position: relative
  transition-timing-function: ease-in
// Анимация выхода
.fade-leave
  top: 0
  opacity: 1

.fade-leave-to
  top: 100px
  opacity: 0

// Анимация входа
.fade-enter
  opacity: 0

.fade-enter-to
  opacity: 1

