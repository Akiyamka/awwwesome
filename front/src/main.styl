.layer
  width: 150%
  height: 150%
  margin-right: -25%
  margin-left: -25%
  position: absolute
  top: -25%
  z-index: -1

.back
  left: 0
  transform: rotate3d(1,0,0,30deg)
  background: url('./assets/' + squad_alt + '.png')
  opacity: .8
  transition: 1s ease transform
  .overlay
    width: 100%
    height: 100%
    background: bkgImageOverlay
  @media (max-width: 580px)
    top: 0