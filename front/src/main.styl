@import colorTheme
@import url('https://fonts.googleapis.com/css?family=Exo+2&subset=cyrillic');

@font-face
  font-family: JustSquare;
  src: url(/static/JustSquare.otf)

@font-face
  font-family: Hooge;
  src: url(/static/hooge.ttf)

html
body
  margin: 0
  padding: 0
  height: 100%
  background: bkgColor
  font: 16px/1.6em 'Exo 2', sans-serif

input,
textarea,
label
  font: 16px/1.6em 'Exo 2', sans-serif

::-webkit-input-placeholder
  // Chrome
  color: inp_placeholder
  font: 16px/1.6em 'Exo 2', sans-serif
:-ms-input-placeholder
  // IE 10+
  color: inp_placeholder
  font: 16px/1.6em 'Exo 2', sans-serif
::-moz-placeholder
  // Firefox 19+ *
  color: inp_placeholder
  opacity: 1
  font: 16px/1.6em 'Exo 2', sans-serif
:-moz-placeholder
// Firefox 4 - 18
  color: inp_placeholder
  opacity: 1
  font: 16px/1.6em 'Exo 2', sans-serif

h1
  color: white
  font: 36px/1.2em JustSquare, sans-serif
  margin: 24px 0

.wrapper
  max-width: 1200px
  padding: 24px
  margin: 0 auto

#app
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  height: 100%
  overflow: hidden
  perspective: 600px
  transform-style: preserve-3d
  display: flex
  flex-flow: column nowrap
  @media (max-width: 580px)
    min-height: 100%
    height: auto
  & > header
    font-size: 0
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    width: 100%
    z-index: 999
    @media (max-width: 1024px)
      flex-flow: column nowrap
    .logo
      height: 34px
      display: inline-block
      vertical-align: middle
      margin: 30px
      @media (max-width: 1024px)
        display: none
    nav
      display: inline-block
      font-size: 16px
      vertical-align: -30%
      margin: 30px
      a
        color: secondColor
        font: 16px/20px 'Hooge', sans-serif
        text-decoration: none
        padding: .5em 1em
        display: inline-block
        word-spacing: 8px
        &.current
          color: mainColor
        &:hover:not(.disabled)
          background: mainColor
          color: bkgColor
        &:active
          color: white
        &.disabled
          opacity: .15
          cursor: default

  & > article
    flex: 1
    margin: 0 48px
.fade-enter-active
.fade-leave-active
  transition-property: all
  transition-duration: .35s
  position: relative
  transition-timing-function: ease-in
// Анимация выхода
.fade-leave
  top: 0
  opacity: 1

.fade-leave-to
  top: 100px
  opacity: 0

// Анимация входа
.fade-enter
  opacity: 0

.fade-enter-to
  opacity: 1

